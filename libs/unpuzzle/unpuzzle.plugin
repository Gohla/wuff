buildscript {
  repositories {
    mavenLocal()
    jcenter()
    mavenCentral()
  }
  
  dependencies {
    classpath 'org.akhikhl.unpuzzle:unpuzzle-plugin:0.0.8'
  }
}

import org.akhikhl.unpuzzle.UnpuzzlePlugin

if (!project.plugins.findPlugin(UnpuzzlePlugin))
  project.apply(plugin: UnpuzzlePlugin)

